<h1>Add a new item</h1>

<form action="/insert_item" method="post">
  <div>
    <label for="link_url_field">Link URL</label>
    <input id="link_url_field" name="link_url" placeholder="Enter a URL..." type="text">
  </div>

  <div>
    <label for="link_description_field">Link Description</label>
    <input id="link_description_field" name="link_description" placeholder="Enter a link description..." type="text">
  </div>

  <div>
    <label for="thumbnail_url_field">Thumbnail URL</label>
    <input id="thumbnail_url_field" name="thumbnail_url" placeholder="Enter a thumbnail URL..." type="text">
  </div>

  <button>Create item</button>
</form>
